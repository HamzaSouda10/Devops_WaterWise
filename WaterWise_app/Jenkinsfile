pipeline {
  agent any

  environment {
    SPRING_DATASOURCE_URL = "jdbc:mysql://mysql:3306/waterwise"
    SPRING_DATASOURCE_USERNAME = "root"
    SPRING_DATASOURCE_PASSWORD = "root"
  }

  stages {
    stage('Build Docker') {
      steps {
        dir('WaterWise_app') {
          bat 'docker-compose build'
        }
      }
    }

    stage('Lancer les conteneurs') {
      steps {
        dir('WaterWise_app') {
          bat 'docker-compose up -d'
        }
      }
    }

    stage('VÃ©rification') {
      steps {
        bat 'docker ps'
      }
    }
  }
}
